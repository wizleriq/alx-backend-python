#!/bin/bash
# kurbeScript - Setup and verify a local Kubernetes cluster

# Exit immediately if any command fails
set -e

echo "ğŸš€ Starting Kubernetes setup..."

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it first."
    echo "ğŸ‘‰ Visit: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Start minikube cluster
echo "âœ… Starting Minikube cluster..."
minikube start

# Verify cluster info
echo "ğŸ” Verifying cluster information..."
kubectl cluster-info

# Get all pods in all namespaces
echo "ğŸ“¦ Listing all pods in all namespaces..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster setup complete!"
