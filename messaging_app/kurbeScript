#!/bin/bash
# kurbeScript - Set up and verify a local Kubernetes cluster using Minikube

set -e  # Exit immediately if a command fails

echo "ğŸš€ Starting Kubernetes setup..."

# Ensure Minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube not found. Please install it first."
    echo "ğŸ‘‰ Visit: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Start Minikube cluster
echo "ğŸ”„ Starting Minikube cluster..."
minikube start

# Verify cluster info
echo "ğŸ” Verifying Kubernetes cluster..."
kubectl cluster-info

# Get pods
echo "ğŸ“¦ Listing all pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster is up and running!"
